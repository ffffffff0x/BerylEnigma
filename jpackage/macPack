#!/bin/bash
read -p "Input Program Version:" version
cd ../
mvn clean
mvn javafx:jlink
cd ./jpackage
jpackage -n BE-BerylEnigma --app-version $version -m "beryenigma/ffffffff0x.beryenigma.Main" --runtime-image ../target/beryenigma --dest ../target/ --java-options "-Djava.class.path=/Applications/BE-BerylEnigma.app/Contents/runtime/Contents/Home/ext/bcprov-jdk15on-1.70.jar --add-opens=java.base/java.lang.reflect=com.jfoenix --add-exports=javafx.controls/com.sun.javafx.scene.control.behavior=com.jfoenix --add-exports=javafx.base/com.sun.javafx.binding=com.jfoenix --add-exports=javafx.base/com.sun.javafx.event=com.jfoenix --add-exports=javafx.graphics/com.sun.javafx.stage=com.jfoenix --add-exports=javafx.graphics/com.sun.javafx.scene=com.jfoenix --add-exports=javafx.controls/com.sun.javafx.scene.control.behavior=com.jfoenix --add-exports=javafx.controls/com.sun.javafx.scene.control=com.jfoenix" --icon ./ico/BerylEnigma.icns --type app-image --description "BerylEnigma" --vendor "RyuZU,ffffffff0x" --copyright "Copyright 2022 ffffffff0x,MIT License"
rm -rf ../target/BE-BerylEnigma.app/Contents/runtime/Contents/Home/conf/security/java.security
cp -rf ./conf/mac_java.security ../target/BE-BerylEnigma.app/Contents/runtime/Contents/Home/conf/security/java.security
cp -rf ./ext ../target/BE-BerylEnigma.app/Contents/runtime/Contents/Home/ext
